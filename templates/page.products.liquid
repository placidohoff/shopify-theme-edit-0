
{% section 'header' %}

<div class="container">
  <h1>All Products</h1>

  {% for product in collections.all.products %}
    <div class="product">
      <h2>{{ product.title }}</h2>
      <p>{{ product.description }}</p>
      <p>Price: ${{ product.price | money }}</p>
      <!-- Add more product details as needed -->
    </div>
  {% endfor %}
</div>


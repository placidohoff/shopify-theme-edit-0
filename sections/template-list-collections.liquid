<div class="d-flex justify-content-center align-items-center">
    <h2>{{section.settings.title}}</h2>
</div>

<div class="d-flex justify-content-center align-items-center">
    <div class="max-w-6xl mx-auto my-3">
        <div class="grid grid-cols-1 gap-3">
            {% for collection in collections %}
                <div class="w-full py-6 px-3">
                    <div class="border overflow-hidden d-flex">
                        <a href="{{collection.url}}">
                            <div class="h-80 overflow-hidden">
                                {% if collection.featured_image != blank %}
                                    {% assign collection_image = collection.featured_image %}
                                    {% else %}
                                        {% assign collection_image = collection.products.first.image  %}
                                {% endif %}
            
                                <img src="{{collection_image |  img_url: 'medium'}}" alt="{{collection.title | escape}}">
                            </div>
                        </a>
                        <h4 class="mx-5 mt-5 fst-italic"><a class="text-reset" href="{{collection.url}}">{{collection.title}}</a></h4>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% comment %} {% for collection in collections %}
    <div class="w-full py-6 px-3">
        <div class="border overflow-hidden d-flex">
            <a href="{{collection.url}}">
                <div class="h-80 overflow-hidden">
                    {% if collection.featured_image != blank %}
                        {% assign collection_image = collection.featured_image %}
                        {% else %}
                            {% assign collection_image = collection.products.first.image  %}
                    {% endif %}

                    <img src="{{collection_image |  img_url: 'medium'}}" alt="{{collection.title | escape}}">
                </div>
            </a>
            <h4 class="mx-5 mt-5 fst-italic"><a class="text-reset" href="{{collection.url}}">{{collection.title}}</a></h4>
        </div>
    </div>
{% endfor %} {% endcomment %}


{% schema %}
{
    "name": "Template List Collections",
    "settings": [
        {
            "label": "Title",
            "type": "text",
            "id": "title",
            "default": "Collections"
        }
        ]
}
{% endschema %}
